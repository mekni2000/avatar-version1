                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped" id="table-1">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.ActionLink("Nom", "Index", new { sortOrder = ViewBag.NomSortParm, currentFilter = ViewBag.CurrentFilter })
