                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nom)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.miseAjour)
                                        </td>
                                        @*<td>
            @Html.DisplayFor(modelItem => item.Telechargement)
        </td>*@
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FileUrl)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Category.name)
                                        </td>
                                        <td class="text-right">
                                            <div class="btn-group mb-3" role="group" aria-label="Basic example">
                                                <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-primary mr-2">Edit</a>
                                                <a asp-action="Details" asp-route-id="@item.id" class="btn btn-info mr-2">Details</a>
                                                <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger">Delete</a>
                                            </div>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer text-right">
                        @Html.PagedListPager(Model, page => Url.Action("Index",
                        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }),
                            new PagedListRenderOptions
                            {
                               DisplayLinkToFirstPage = X.PagedList.Mvc.Common.PagedListDisplayMode.Always,
                               DisplayLinkToLastPage = X.PagedList.Mvc.Common.PagedListDisplayMode.Always,
                               DisplayLinkToNextPage = X.PagedList.Mvc.Common.PagedListDisplayMode.Always,
