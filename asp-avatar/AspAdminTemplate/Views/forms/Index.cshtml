                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1 list-avatar">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="categories" asp-action="Index">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark " asp-controller="categories" asp-action="IndexAdmin">Categories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark " asp-controller="subcategories" asp-action="Index">Sous Categories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark " asp-controller="forms" asp-action="Index">Demande de film</a>
                        </li>
                        @*<li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="applicationroles" asp-action="Index">
                                <i class="fas fa-cogs"></i> <span>Roles</span>
                            </a>
                        </li>*@
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="admin" asp-action="Index">
                                <i class="fas fa-users"></i> <span>Users</span>
                            </a>
                        </li>
                        <li class="nav-item">

                            @*<a class="dropdown-item has-icon" asp-action="Update" asp-controller="Admin" asp-route-id="@UserManager.GetUserId(User)">
                                <i class="far fa-user"></i> Edit Profile
                            </a>*@
                            @*<div class="dropdown-divider"></div>*@
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">
