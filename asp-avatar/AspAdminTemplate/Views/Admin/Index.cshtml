<section class="section">
    <div class="container section-header">
        <h5>Liste Utilisateurs</h5>
    </div>

    <div class="container section-body">
        <h2 class="section-title">Liste Utilisateurs</h2>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    @*<div class="card-header card-relative">
                            <div class="card-header-form card-relative">
                                <a asp-action="Create" class="btn btn-primary">Create a User</a>
                            </div>
                        </div>*@

                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped" id="table-1">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Nom</th>
                                        <th>Email</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Id)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.UserName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                            <td>
                                                <div class="btn-group mb-3" role="group" aria-label="Basic example">
                                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-secondary">Update</a>

                                                    @if (item.UserName != "Admin")
                                                    {
                                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>