<div class="bg-gris height-77">
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.ActionLink("ID", "afFicheSubCategory", new { sortOrder = ViewBag.NomSortParm, currentFilter = ViewBag.CurrentFilter })
                    </th>
                    <th>
                        @Html.ActionLink("Nom ", "afFicheSubCategory", new { sortOrder = ViewBag.miseAjourSortParm, currentFilter = ViewBag.CurrentFilter })
                    </th>
                    <th>
                        @Html.ActionLink("Date mise à jour", "afFicheSubCategory", new { sortOrder = ViewBag.TelechargementSortParm, currentFilter = ViewBag.CurrentFilter })
                    </th>
                    <th class="text-right">
                        @Html.ActionLink("Téléchargement", "afFicheSubCategory", new { sortOrder = ViewBag.FileUrlSortParm, currentFilter = ViewBag.CurrentFilter })
                    </th>
                   
                </tr>
