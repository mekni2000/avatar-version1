            <p class="name_cat name_cat1">Accueil  <span class="mr-2 ml-2">></span>  <span>@ViewBag.getCategorie.name</span></p>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.miseAjour)
                        </td>
                       
                        <td class="text-right">
                            <a href="~/assets/files/@item.FileUrl" download>
